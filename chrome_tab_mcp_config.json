{
  "mcpServers": {
    "chrome-tab-reader": {
      "command": "uv",
      "args": [
        "run",
        "/absolute/path/to/chrome_tab_mcp_server.py",
        "--ollama-url",
        "http://localhost:11434",
        "--model",
        "llama2"
      ]
    }
  }
}


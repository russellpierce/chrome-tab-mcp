{
  "manifest_version": 3,
  "name": "Chrome Tab Reader",
  "version": "1.0.0",
  "description": "Extracts and analyzes webpage content with AI assistance",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chrome Tab Reader"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/readability.min.js", "lib/dompurify.min.js", "content_script.js"],
      "run_at": "document_start"
    }
  ]
}
